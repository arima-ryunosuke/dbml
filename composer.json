{
  "config": {
    "platform": {
      "php": "7.4"
    }
  },
  "name": "ryunosuke/dbml",
  "type": "library",
  "description": "Database Manipulation Layer",
  "license": "MIT",
  "authors": [
    {
      "name": "ryunosuke",
      "email": "ryunosuke.arima@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "doctrine/dbal": "3.*",
    "psr/simple-cache": "1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "8.*",
    "symfony/cache": "5.*",
    "ryunosuke/functions": "1.4.*"
  },
  "autoload": {
    "psr-4": {
      "ryunosuke\\dbml\\": "src/dbml"
    },
    "files": [
      "src/functions.stub"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "ryunosuke\\Test\\": "tests/Test"
    },
    "files": [
      "tests/functions.php"
    ]
  },
  "scripts": {
    "build": [
      "@export",
      "@test",
      "@document"
    ],
    "export": [
      "export-function",
      "exclude-internal"
    ],
    "test": [
      "vendor/bin/phpunit --configuration=tests/phpunit.xml"
    ],
    "document": [
      "rm -rf docs",
      "@php bin/documentize.phar generate src docs --ansi -r --force --no-constant --no-function --no-private --contain 'ryunosuke\\dbml' --contain 'Doctrine' --except 'ryunosuke\\dbml\\Utility' --template-config .docconfig.php -v --stats"
    ],
    "post-install-cmd": [
      "@export"
    ],
    "post-update-cmd": [
      "@export"
    ]
  }
}

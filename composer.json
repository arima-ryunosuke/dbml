{
  "config": {
    "platform": {
      "php": "7.1"
    }
  },
  "name": "ryunosuke/dbml",
  "type": "library",
  "description": "Database Manipulation Layer",
  "license": "MIT",
  "authors": [
    {
      "name": "ryunosuke",
      "email": "ryunosuke.arima@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.1",
    "doctrine/dbal": "2.*"
  },
  "require-dev": {
    "phpunit/phpunit": "5.*",
    "ryunosuke/functions": "1.2.1",
    "symfony/yaml": "*"
  },
  "suggest": {
    "ext-yaml": "Needed to support yaml parser",
    "symfony/yaml": "Needed to support yaml parser"
  },
  "autoload": {
    "psr-4": {
      "ryunosuke\\dbml\\": "src/dbml"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "ryunosuke\\Test\\": "tests/Test"
    }
  },
  "scripts": {
    "build": [
      "@composer export",
      "@composer phpcs",
      "@composer test",
      "@composer document"
    ],
    "export": [
      "@php bin/export.php"
    ],
    "phpcs": [
      "@php bin/php-cs-fixer.phar fix src/dbml --dry-run --diff -v --ansi"
    ],
    "test": [
      "vendor/bin/phpunit --configuration=tests/phpunit.xml"
    ],
    "document": [
      "rm -rf docs",
      "@php bin/documentize.phar generate src docs --ansi -r --force --no-constant --no-function --no-private --contain 'ryunosuke\\dbml' --contain 'Doctrine' --except 'ryunosuke\\dbml\\Utility' --template-config .docconfig.php -v --stats"
    ],
    "post-install-cmd": [
      "@composer export"
    ],
    "post-update-cmd": [
      "@composer export"
    ]
  }
}

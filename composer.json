{
  "config": {
    "platform": {
      "php": "7.4"
    }
  },
  "name": "ryunosuke/dbml",
  "type": "library",
  "description": "Database Manipulation Layer",
  "license": "MIT",
  "authors": [
    {
      "name": "ryunosuke",
      "email": "ryunosuke.arima@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "doctrine/dbal": "3.*",
    "psr/simple-cache": "1.*",
    "ryunosuke/utility-attribute": "1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "9.*",
    "ryunosuke/phpunit-extension": "3.*",
    "ryunosuke/simple-cache": "1.*",
    "ryunosuke/functions": "1.6.*",
    "ryunosuke/polyfill-attribute": "2.*",
    "ryunosuke/polyfill-enum": "1.*"
  },
  "autoload": {
    "psr-4": {
      "ryunosuke\\dbml\\": "src/dbml",
      "ryunosuke\\dbal\\": "src/dbal"
    },
    "files": [
      "src/functions.stub"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "ryunosuke\\Test\\": "tests/Test"
    },
    "files": [
      "tests/functions.php"
    ]
  },
  "scripts": {
    "build": [
      "@export",
      "@diff",
      "@test"
    ],
    "export": [
      "export-function",
      "exclude-internal"
    ],
    "patch": [
      "@php bin/transport.php patch"
    ],
    "diff": [
      "@php bin/transport.php diff"
    ],
    "test": [
      "vendor/bin/phpunit --configuration=tests/phpunit.xml"
    ],
    "post-install-cmd": [
      "@export",
      "@patch"
    ],
    "post-update-cmd": [
      "@export",
      "@patch"
    ]
  }
}
